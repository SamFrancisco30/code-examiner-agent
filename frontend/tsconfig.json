{
    "compilerOptions": {
      "target": "ESNext",                          // 指定 ECMAScript 目标版本
      "lib": ["DOM", "DOM.Iterable", "ESNext"],    // 使用的库
      "allowJs": true,                             // 允许编译 JavaScript 文件
      "skipLibCheck": true,                        // 跳过库文件的类型检查
      "strict": true,                              // 启用严格模式
      "forceConsistentCasingInFileNames": true,    // 强制文件名一致
      "module": "ESNext",                          // 使用的模块系统
      "moduleResolution": "Node",                 // 模块解析策略
      "resolveJsonModule": true,                   // 支持导入 JSON 文件
      "isolatedModules": true,                     // 每个文件作为单独模块
      "jsx": "react-jsx"                           // 使用 React 的 JSX 转换
    },
    "include": ["src"],                            // 包含的文件或目录
    "exclude": ["node_modules"]                    // 排除的文件或目录
  }